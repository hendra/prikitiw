<h1>Users</h1>

<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Username</td>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Email</td>
      <td>Action</td>
    </tr>
  </thead>

  <tbody>
    <% for user in @users -%>
      <tr>
        <td><%= user.id %></td>
        <td><%=h user.login %></td>
        <td><%=h user.first_name %></td>
        <td><%=h user.last_name %></td>
        <td><%=h user.email %></td>
        <td>
          <%= link_to 'Show', user_path(user) %> |
          <%= link_to 'Edit', edit_user_path(user) %> |
          <%= link_to_unless user.is_admin?, 'Delete', user_path(user), :confirm => "Are you sure?", :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
