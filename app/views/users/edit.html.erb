<h1>Edit Profile</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => edit_user_path(@user) do |f| -%>
  <%= render :partial => "form", :locals => {:f => f} %>
<p><%= submit_tag 'Sign up' %></p>
<% end -%>

<%= link_to "Back", user_path(@user) %>
